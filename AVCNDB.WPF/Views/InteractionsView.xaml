<UserControl x:Class="AVCNDB.WPF.Views.InteractionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:AVCNDB.WPF.Converters"
             xmlns:vm="clr-namespace:AVCNDB.WPF.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:InteractionsViewModel}"
             Background="{DynamicResource MaterialDesignBackground}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:StringToVisibilityConverter x:Key="StringToVis"/>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ============================================
             PANNEAU GAUCHE - Sélection des DCI
        ============================================ -->
        <Border Grid.Column="0" 
                Background="{DynamicResource MaterialDesignPaper}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Titre -->
                <Border Grid.Row="0" Padding="20,16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="SwapHorizontal" Width="24" Height="24"
                                                     Foreground="{StaticResource PrimaryBrush}"
                                                     VerticalAlignment="Center"/>
                            <TextBlock Text="Analyse d'interactions"
                                       Style="{StaticResource TitleH3Style}"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="Sélectionnez les DCI à analyser"
                                   Style="{StaticResource SubtitleStyle}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Recherche de DCI -->
                <Border Grid.Row="1" Padding="16,0,16,10">
                    <TextBox Text="{Binding DciSearchText, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Rechercher une DCI..."
                             Style="{StaticResource MaterialDesignOutlinedTextBox}">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding SearchDciCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                </Border>

                <!-- Liste des DCI disponibles -->
                <ListBox Grid.Row="2"
                         ItemsSource="{Binding AvailableDcis}"
                         SelectionMode="Single"
                         Margin="0"
                         Padding="8"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem" BasedOn="{StaticResource MaterialDesignListBoxItem}">
                            <Setter Property="Padding" Value="4,2"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="{Binding Dciname}"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"
                                           FontSize="13"/>

                                <Button Grid.Column="1"
                                        Command="{Binding DataContext.AddDciCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource MaterialDesignIconButton}"
                                        Foreground="{StaticResource SuccessBrush}"
                                        ToolTip="Ajouter à l'analyse"
                                        Width="28" Height="28">
                                    <materialDesign:PackIcon Kind="Plus" Width="16" Height="16"/>
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- DCI sélectionnées + bouton analyser -->
                <Border Grid.Row="3" 
                        Background="{StaticResource PrimaryLightBrush}"
                        Padding="20,16">
                    <StackPanel>
                        <TextBlock Text="DCI sélectionnées"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"/>

                        <ItemsControl ItemsSource="{Binding SelectedDcis}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource PrimaryBrush}"
                                            CornerRadius="12"
                                            Padding="12,6"
                                            Margin="0,0,8,8">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Dciname}"
                                                       Foreground="White"
                                                       FontSize="12"
                                                       VerticalAlignment="Center"/>
                                            <Button Command="{Binding DataContext.RemoveDciCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource MaterialDesignIconButton}"
                                                    Foreground="White"
                                                    Width="20" Height="20"
                                                    Margin="8,0,0,0">
                                                <materialDesign:PackIcon Kind="Close" Width="14" Height="14"/>
                                            </Button>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Button Command="{Binding AnalyzeCommand}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="{StaticResource SuccessBrush}"
                                Foreground="White"
                                Margin="0,12,0,0"
                                IsEnabled="{Binding CanAnalyze}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Magnify" Width="18" Height="18" VerticalAlignment="Center"/>
                                <TextBlock Text="Analyser les interactions" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- ============================================
             PANNEAU DROIT - Résultats
        ============================================ -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Barre d'outils -->
            <Border Grid.Row="0" 
                    Background="{DynamicResource MaterialDesignPaper}"
                    Padding="16,10"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Style="{StaticResource TitleH3Style}"
                               VerticalAlignment="Center">
                        <Run Text="Résultats : "/>
                        <Run Text="{Binding Interactions.Count, Mode=OneWay}" FontWeight="Bold"/>
                        <Run Text=" interaction(s) trouvée(s)"/>
                    </TextBlock>

                    <Button Grid.Column="1"
                            Command="{Binding ExportPdfCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            ToolTip="Exporter en PDF"
                            IsEnabled="{Binding HasResults}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FilePdfBox" Width="18" Height="18" VerticalAlignment="Center"/>
                            <TextBlock Text="Export PDF" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>

            <!-- État vide -->
            <StackPanel Grid.Row="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Visibility="{Binding NoResults, Converter={StaticResource BoolToVis}}">
                <materialDesign:PackIcon Kind="ShieldSearch" 
                                         Width="80" Height="80"
                                         Foreground="{StaticResource BorderBrush}"
                                         HorizontalAlignment="Center"/>
                <TextBlock Text="Aucune interaction trouvée"
                           FontSize="18" FontWeight="SemiBold"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,16,0,4"/>
                <TextBlock Text="Sélectionnez au moins 2 DCI et lancez l'analyse"
                           Style="{StaticResource SubtitleStyle}"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Liste des interactions trouvées -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          Visibility="{Binding HasResults, Converter={StaticResource BoolToVis}}">
                <ItemsControl ItemsSource="{Binding Interactions}"
                              Margin="24">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource ElevatedCardStyle}" Margin="0,0,0,16" Padding="0">
                                <Grid>
                                    <!-- Severity color bar -->
                                    <Border HorizontalAlignment="Left" Width="6" CornerRadius="12,0,0,12">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="{StaticResource WarningBrush}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding level}" Value="Contre-indication">
                                                        <Setter Property="Background" Value="{StaticResource ErrorBrush}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding level}" Value="Association déconseillée">
                                                        <Setter Property="Background" Value="#FF9800"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding level}" Value="Précaution d'emploi">
                                                        <Setter Property="Background" Value="{StaticResource InfoBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>

                                    <!-- Content -->
                                    <StackPanel Margin="20,16">
                                        <!-- Header: DCI1 ↔ DCI2 + severity badge -->
                                        <Grid Margin="0,0,0,12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                <Border Background="{StaticResource PrimaryLightBrush}"
                                                        CornerRadius="6" Padding="10,5">
                                                    <TextBlock Text="{Binding dci1}"
                                                               FontWeight="SemiBold" FontSize="13"
                                                               Foreground="{StaticResource PrimaryDarkBrush}"/>
                                                </Border>

                                                <materialDesign:PackIcon Kind="SwapHorizontal" 
                                                                         Width="22" Height="22"
                                                                         Margin="10,0"
                                                                         VerticalAlignment="Center"
                                                                         Foreground="{StaticResource TextSecondaryBrush}"/>

                                                <Border Background="{StaticResource SecondaryLightBrush}"
                                                        CornerRadius="6" Padding="10,5">
                                                    <TextBlock Text="{Binding dci2}"
                                                               FontWeight="SemiBold" FontSize="13"
                                                               Foreground="{StaticResource SecondaryDarkBrush}"/>
                                                </Border>
                                            </StackPanel>

                                            <!-- Severity badge -->
                                            <Border Grid.Column="1" CornerRadius="6" Padding="10,5">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="{StaticResource WarningLightBrush}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding level}" Value="Contre-indication">
                                                                <Setter Property="Background" Value="{StaticResource ErrorLightBrush}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding level}" Value="Association déconseillée">
                                                                <Setter Property="Background" Value="#FFF3E0"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding level}" Value="Précaution d'emploi">
                                                                <Setter Property="Background" Value="{StaticResource InfoLightBrush}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding level}" FontWeight="SemiBold" FontSize="12">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="{StaticResource WarningDarkBrush}"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding level}" Value="Contre-indication">
                                                                    <Setter Property="Foreground" Value="{StaticResource ErrorDarkBrush}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding level}" Value="Association déconseillée">
                                                                    <Setter Property="Foreground" Value="#E65100"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding level}" Value="Précaution d'emploi">
                                                                    <Setter Property="Foreground" Value="{StaticResource InfoDarkBrush}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                        </Grid>

                                        <!-- Description -->
                                        <TextBlock Text="{Binding description}"
                                                   TextWrapping="Wrap"
                                                   FontSize="13"
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   Margin="0,0,0,8"
                                                   Visibility="{Binding description, Converter={StaticResource StringToVis}}"/>

                                        <!-- Mécanisme -->
                                        <Border Background="{DynamicResource MaterialDesignBackground}"
                                                CornerRadius="6" Padding="12,10"
                                                Margin="0,0,0,8"
                                                Visibility="{Binding mecanisme, Converter={StaticResource StringToVis}}">
                                            <StackPanel>
                                                <TextBlock Text="MÉCANISME"
                                                           FontWeight="SemiBold" FontSize="11"
                                                           Foreground="{StaticResource TextSecondaryBrush}"
                                                           Margin="0,0,0,4"/>
                                                <TextBlock Text="{Binding mecanisme}"
                                                           TextWrapping="Wrap" FontSize="12"/>
                                            </StackPanel>
                                        </Border>

                                        <!-- Conduite à tenir -->
                                        <Border Background="#E8F5E9"
                                                CornerRadius="6" Padding="12,10"
                                                Visibility="{Binding conduite, Converter={StaticResource StringToVis}}">
                                            <StackPanel>
                                                <TextBlock Text="CONDUITE À TENIR"
                                                           FontWeight="SemiBold" FontSize="11"
                                                           Foreground="#2E7D32"
                                                           Margin="0,0,0,4"/>
                                                <TextBlock Text="{Binding conduite}"
                                                           TextWrapping="Wrap" FontSize="12"
                                                           Foreground="#1B5E20"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Loading -->
            <ProgressBar Grid.Row="1"
                         IsIndeterminate="True"
                         Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"
                         VerticalAlignment="Top"
                         Margin="24,0"/>
        </Grid>
    </Grid>
</UserControl>
