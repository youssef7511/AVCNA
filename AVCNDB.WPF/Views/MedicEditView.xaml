<UserControl x:Class="AVCNDB.WPF.Views.MedicEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:AVCNDB.WPF.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:MedicEditViewModel}"
             Background="{DynamicResource MaterialDesignBackground}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ============================================
             EN-TÃŠTE
        ============================================ -->
        <Border Grid.Row="0" 
                Background="{DynamicResource MaterialDesignPaper}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding PageTitle}" 
                               Style="{StaticResource TitleH2Style}"/>
                    <TextBlock Text="{Binding Medic.itemname, TargetNullValue='Saisir les informations du mÃ©dicament'}"
                               Style="{StaticResource SubtitleStyle}"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Message d'erreur -->
                <Border Grid.Column="1"
                        Background="{StaticResource ErrorLightBrush}"
                        CornerRadius="4"
                        Padding="12,8"
                        Visibility="{Binding HasError, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="{Binding ErrorMessage}"
                               Foreground="{StaticResource ErrorDarkBrush}"/>
                </Border>
            </Grid>
        </Border>

        <!-- ============================================
             FORMULAIRE
        ============================================ -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      Padding="24">
            <StackPanel MaxWidth="1200">

                <!-- Section Identification -->
                <Border Style="{StaticResource ElevatedCardStyle}" Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="ðŸ”– Identification" 
                                   Style="{StaticResource TitleH3Style}"
                                   Margin="0,0,0,20"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Nom du mÃ©dicament -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,16,16">
                                <TextBox Text="{Binding Medic.itemname, UpdateSourceTrigger=PropertyChanged}"
                                         materialDesign:HintAssist.Hint="Nom du mÃ©dicament *"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                            </StackPanel>

                            <!-- Code-barre -->
                            <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,16">
                                <TextBox Text="{Binding Medic.barcode, UpdateSourceTrigger=PropertyChanged}"
                                         materialDesign:HintAssist.Hint="Code-barre (EAN-13)"
                                         MaxLength="13"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                            </StackPanel>

                            <!-- AMM -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,16,0">
                                <TextBox Text="{Binding Medic.amm, UpdateSourceTrigger=PropertyChanged}"
                                         materialDesign:HintAssist.Hint="NÂ° AMM"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                            </StackPanel>

                            <!-- Famille 1 -->
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,16,0">
                                <ComboBox ItemsSource="{Binding Families}"
                                          SelectedValue="{Binding Medic.fam1}"
                                          SelectedValuePath="itemname"
                                          DisplayMemberPath="itemname"
                                          materialDesign:HintAssist.Hint="Famille 1"
                                          Style="{StaticResource MaterialDesignOutlinedComboBox}"/>
                            </StackPanel>

                            <!-- Laboratoire -->
                            <StackPanel Grid.Row="1" Grid.Column="2">
                                <ComboBox ItemsSource="{Binding Labos}"
                                          SelectedValue="{Binding Medic.labo}"
                                          SelectedValuePath="itemname"
                                          DisplayMemberPath="itemname"
                                          materialDesign:HintAssist.Hint="Laboratoire"
                                          Style="{StaticResource MaterialDesignOutlinedComboBox}"/>
                            </StackPanel>

                            <!-- Famille 2 -->
                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,16,16,0">
                                <ComboBox ItemsSource="{Binding Families}"
                                          SelectedValue="{Binding Medic.fam2}"
                                          SelectedValuePath="itemname"
                                          DisplayMemberPath="itemname"
                                          materialDesign:HintAssist.Hint="Famille 2"
                                          Style="{StaticResource MaterialDesignOutlinedComboBox}"/>
                            </StackPanel>

                            <!-- Famille 3 -->
                            <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,16,16,0">
                                <ComboBox ItemsSource="{Binding Families}"
                                          SelectedValue="{Binding Medic.fam3}"
                                          SelectedValuePath="itemname"
                                          DisplayMemberPath="itemname"
                                          materialDesign:HintAssist.Hint="Famille 3"
                                          Style="{StaticResource MaterialDesignOutlinedComboBox}"/>
                            </StackPanel>

                            <!-- Famille 4 -->
                            <StackPanel Grid.Row="2" Grid.Column="2" Margin="0,16,0,0">
                                <ComboBox ItemsSource="{Binding Families}"
                                          SelectedValue="{Binding Medic.family}"
                                          SelectedValuePath="itemname"
                                          DisplayMemberPath="itemname"
                                          materialDesign:HintAssist.Hint="Famille 4"
                                          Style="{StaticResource MaterialDesignOutlinedComboBox}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Section Composition (DCI) -->
                <Border Style="{StaticResource ElevatedCardStyle}" Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="ðŸ§ª Composition" 
                                   Style="{StaticResource TitleH3Style}"
                                   Margin="0,0,0,20"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- DCI 1 -->
                            <ComboBox Grid.Row="0" Grid.Column="0"
                                      ItemsSource="{Binding Dcis}"
                                      SelectedValue="{Binding Medic.dci1}"
                                      SelectedValuePath="itemname"
                                      DisplayMemberPath="itemname"
                                      materialDesign:HintAssist.Hint="DCI Principal *"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                      Margin="0,0,16,16"/>
                            <TextBox Grid.Row="0" Grid.Column="1"
                                     Text="{Binding Medic.dose1, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.Hint="Dosage 1"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     Margin="0,0,0,16"/>

                            <!-- DCI 2 -->
                            <ComboBox Grid.Row="1" Grid.Column="0"
                                      ItemsSource="{Binding Dcis}"
                                      SelectedValue="{Binding Medic.dci2}"
                                      SelectedValuePath="itemname"
                                      DisplayMemberPath="itemname"
                                      materialDesign:HintAssist.Hint="DCI Secondaire"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                      Margin="0,0,16,16"/>
                            <TextBox Grid.Row="1" Grid.Column="1"
                                     Text="{Binding Medic.dose2, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.Hint="Dosage 2"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     Margin="0,0,0,16"/>

                            <!-- DCI 3 -->
                            <ComboBox Grid.Row="2" Grid.Column="0"
                                      ItemsSource="{Binding Dcis}"
                                      SelectedValue="{Binding Medic.dci3}"
                                      SelectedValuePath="itemname"
                                      DisplayMemberPath="itemname"
                                      materialDesign:HintAssist.Hint="DCI 3"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                      Margin="0,0,16,16"/>
                            <TextBox Grid.Row="2" Grid.Column="1"
                                     Text="{Binding Medic.dose3, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.Hint="Dosage 3"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     Margin="0,0,0,16"/>

                            <!-- DCI 4 -->
                            <ComboBox Grid.Row="3" Grid.Column="0"
                                      ItemsSource="{Binding Dcis}"
                                      SelectedValue="{Binding Medic.dci4}"
                                      SelectedValuePath="itemname"
                                      DisplayMemberPath="itemname"
                                      materialDesign:HintAssist.Hint="DCI 4"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                      Margin="0,0,16,0"/>
                            <TextBox Grid.Row="3" Grid.Column="1"
                                     Text="{Binding Medic.dose4, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.Hint="Dosage 4"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Section Forme et PrÃ©sentation -->
                <Border Style="{StaticResource ElevatedCardStyle}" Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="ðŸ’Š Forme et PrÃ©sentation" 
                                   Style="{StaticResource TitleH3Style}"
                                   Margin="0,0,0,20"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Forme -->
                            <TextBox Grid.Column="0"
                                     Text="{Binding Medic.forme, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.Hint="Forme"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     Margin="0,0,16,0"/>

                            <!-- PrÃ©sentation -->
                            <TextBox Grid.Column="1"
                                     Text="{Binding Medic.present, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.Hint="PrÃ©sentation"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     Margin="0,0,16,0"/>

                            <!-- Voie d'administration -->
                            <TextBox Grid.Column="2"
                                     Text="{Binding Medic.voie, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.Hint="Voie d'administration"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Section Tarification -->
                <Border Style="{StaticResource ElevatedCardStyle}" Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="ðŸ’° Tarification" 
                                   Style="{StaticResource TitleH3Style}"
                                   Margin="0,0,0,20"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- PFHT -->
                            <TextBox Grid.Column="0"
                                     Text="{Binding Medic.price, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}"
                                     materialDesign:HintAssist.Hint="Prix Fab. HT"
                                     materialDesign:TextFieldAssist.SuffixText="DH"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     Margin="0,0,12,0"/>

                            <!-- PH -->
                            <TextBox Grid.Column="1"
                                     Text="{Binding Medic.refprice, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}"
                                     materialDesign:HintAssist.Hint="Prix Hospitalier"
                                     materialDesign:TextFieldAssist.SuffixText="DH"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     Margin="0,0,12,0"/>

                            <!-- PGross -->
                            <TextBox Grid.Column="2"
                                     Text="{Binding Medic.pctprice, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}"
                                     materialDesign:HintAssist.Hint="Prix de Gros"
                                     materialDesign:TextFieldAssist.SuffixText="DH"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     Margin="0,0,12,0"/>

                            <!-- PBR -->
                            <TextBox Grid.Column="3"
                                     Text="{Binding Medic.netprice, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}"
                                     materialDesign:HintAssist.Hint="Prix Base Remb."
                                     materialDesign:TextFieldAssist.SuffixText="DH"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     Margin="0,0,12,0"/>

                            <!-- PPV -->
                            <TextBox Grid.Column="4"
                                     Text="{Binding Medic.price, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}"
                                     materialDesign:HintAssist.Hint="Prix Public (PPV) *"
                                     materialDesign:TextFieldAssist.SuffixText="DH"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     FontWeight="Bold"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Section Options -->
                <Border Style="{StaticResource ElevatedCardStyle}" Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="âš™ï¸ Options" 
                                   Style="{StaticResource TitleH3Style}"
                                   Margin="0,0,0,20"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- PÃ©diatrique -->
                            <CheckBox Grid.Row="0" Grid.Column="0"
                                      IsChecked="{Binding Medic.pediatric, Converter={StaticResource IntToBoolConverter}}"
                                      Content="PÃ©diatrique"
                                      Style="{StaticResource MaterialDesignCheckBox}"
                                      Margin="0,0,0,16"/>

                            <!-- GÃ©nÃ©rique -->
                            <CheckBox Grid.Row="0" Grid.Column="1"
                                      IsChecked="{Binding Medic.isap, Converter={StaticResource IntToBoolConverter}}"
                                      Content="GÃ©nÃ©rique"
                                      Style="{StaticResource MaterialDesignCheckBox}"
                                      Margin="0,0,0,16"/>

                            <!-- Remboursable -->
                            <CheckBox Grid.Row="0" Grid.Column="2"
                                      IsChecked="{Binding Medic.isic, Converter={StaticResource IntToBoolConverter}}"
                                      Content="Remboursable"
                                      Style="{StaticResource MaterialDesignCheckBox}"
                                      Margin="0,0,0,16"/>

                            <!-- Taux de remboursement -->
                            <TextBox Grid.Row="0" Grid.Column="3"
                                     Text="{Binding Medic.ictx, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.Hint="Taux remb. (%)"
                                     materialDesign:TextFieldAssist.SuffixText="%"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     Margin="0,0,0,16"/>

                            <!-- Tableau -->
                            <ComboBox Grid.Row="1" Grid.Column="0"
                                      SelectedItem="{Binding Medic.tableau}"
                                      materialDesign:HintAssist.Hint="Tableau (substance contrÃ´lÃ©e)"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                      Margin="0,0,16,0">
                                <ComboBoxItem Content=""/>
                                <ComboBoxItem Content="A"/>
                                <ComboBoxItem Content="B"/>
                                <ComboBoxItem Content="C"/>
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Section Notes -->
                <Border Style="{StaticResource ElevatedCardStyle}">
                    <StackPanel>
                        <TextBlock Text="ðŸ“ Notes et indications" 
                                   Style="{StaticResource TitleH3Style}"
                                   Margin="0,0,0,20"/>

                        <TextBox Text="{Binding Medic.indication, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Indications, notes..."
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 MinHeight="100"
                                 VerticalContentAlignment="Top"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- ============================================
             BARRE D'ACTIONS
        ============================================ -->
        <Border Grid.Row="2" 
                Background="{DynamicResource MaterialDesignPaper}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Bouton Annuler -->
                <Button Grid.Column="0"
                        Command="{Binding CancelAsyncCommand}"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Close" Width="18" Height="18" VerticalAlignment="Center"/>
                        <TextBlock Text="Annuler" Margin="8,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Boutons de validation -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Command="{Binding GoBackCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="0,0,12,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ArrowLeft" Width="18" Height="18" VerticalAlignment="Center"/>
                            <TextBlock Text="Retour" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding SaveAsyncCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="{StaticResource SuccessBrush}"
                            Foreground="White">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ContentSave" Width="18" Height="18" VerticalAlignment="Center"/>
                            <TextBlock Text="Enregistrer" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Indicateur de chargement -->
        <Border Grid.RowSpan="3"
                Background="#80000000"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" 
                             Width="200"
                             Style="{StaticResource MaterialDesignCircularProgressBar}"/>
                <TextBlock Text="Enregistrement en cours..."
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,16,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

