<UserControl x:Class="AVCNDB.WPF.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:AVCNDB.WPF.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:HomeViewModel}"
             Background="{DynamicResource MaterialDesignBackground}">

    <UserControl.Resources>
        <Style x:Key="QuickTileButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="MinHeight" Value="72"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="12">
        <StackPanel>
            <!-- En-tête compact -->
            <Grid Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Tableau de bord"
                               Style="{StaticResource TitleH2Style}"
                               Margin="0"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Command="{Binding RefreshCommand}"
                        Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="Rafraîchir"
                        Width="40" Height="40"
                        Margin="12,0,0,0">
                    <materialDesign:PackIcon Kind="Refresh" Width="20" Height="20"/>
                </Button>
            </Grid>

            <!-- Cartes de statistiques (responsive) -->
            <WrapPanel Margin="0,0,0,12">
                <!-- Total Médicaments -->
                <Border Style="{StaticResource ElevatedCardStyle}" Width="280" Margin="0,0,12,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Width="48" Height="48"
                                Background="{StaticResource PrimaryLightBrush}"
                                CornerRadius="12"
                                VerticalAlignment="Top">
                            <materialDesign:PackIcon Kind="Pill" Width="22" Height="22"
                                                     Foreground="{StaticResource PrimaryBrush}"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                            <TextBlock Text="{Binding TotalMedics, StringFormat=N0}"
                                       FontSize="28"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="Médicaments" Style="{StaticResource SubtitleStyle}"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Total DCI -->
                <Border Style="{StaticResource ElevatedCardStyle}" Width="280" Margin="0,0,12,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Width="48" Height="48"
                                Background="{StaticResource SecondaryLightBrush}"
                                CornerRadius="12"
                                VerticalAlignment="Top">
                            <materialDesign:PackIcon Kind="Flask" Width="22" Height="22"
                                                     Foreground="{StaticResource SecondaryBrush}"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                            <TextBlock Text="{Binding TotalDcis, StringFormat=N0}"
                                       FontSize="28"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="Substances actives (DCI)" Style="{StaticResource SubtitleStyle}"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Total Labos -->
                <Border Style="{StaticResource ElevatedCardStyle}" Width="280" Margin="0,0,12,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Width="48" Height="48"
                                Background="{StaticResource AccentLightBrush}"
                                CornerRadius="12"
                                VerticalAlignment="Top">
                            <materialDesign:PackIcon Kind="Factory" Width="22" Height="22"
                                                     Foreground="{StaticResource AccentBrush}"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                            <TextBlock Text="{Binding TotalLabos, StringFormat=N0}"
                                       FontSize="28"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="Laboratoires" Style="{StaticResource SubtitleStyle}"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Alertes Stock -->
                <Border Style="{StaticResource ElevatedCardStyle}" Width="280" Margin="0,0,12,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Width="48" Height="48"
                                Background="{StaticResource ErrorLightBrush}"
                                CornerRadius="12"
                                VerticalAlignment="Top">
                            <materialDesign:PackIcon Kind="AlertCircle" Width="22" Height="22"
                                                     Foreground="{StaticResource ErrorBrush}"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                            <TextBlock Text="{Binding StockAlertsCount, StringFormat=N0}"
                                       FontSize="28"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="Alertes de stock" Style="{StaticResource SubtitleStyle}"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </WrapPanel>

            <!-- Accès rapide (compact) -->
            <Border Style="{StaticResource BaseCardStyle}" Margin="0,0,0,12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel>
                        <TextBlock Text="Accès rapide"
                                   Style="{StaticResource TitleH3Style}"
                                   Margin="0"/>
                        <TextBlock Text="Raccourcis vers les écrans principaux"
                                   Style="{StaticResource SubtitleStyle}"
                                   Margin="0,2,0,12"/>
                    </StackPanel>

                    <UniformGrid Grid.Row="1" Columns="2">
                        <!-- Médicaments -->
                        <Border Style="{StaticResource ElevatedCardStyle}" Padding="0" Margin="0,0,12,12">
                            <Button Command="{Binding NavigateToMedicsCommand}"
                                    Style="{StaticResource QuickTileButtonStyle}">
                                <Grid Margin="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Width="40" Height="40" CornerRadius="10"
                                            Background="{StaticResource PrimaryLightBrush}">
                                        <materialDesign:PackIcon Kind="Pill" Width="20" Height="20"
                                                                 Foreground="{StaticResource PrimaryBrush}"
                                                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Text="Médicaments" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="Recherche &amp; édition" Style="{StaticResource SubtitleStyle}" FontSize="12"/>
                                    </StackPanel>

                                    <materialDesign:PackIcon Grid.Column="2" Kind="ChevronRight"
                                                             Foreground="{StaticResource TextSecondaryBrush}"
                                                             VerticalAlignment="Center"/>
                                </Grid>
                            </Button>
                        </Border>

                        <!-- DCI -->
                        <Border Style="{StaticResource ElevatedCardStyle}" Padding="0" Margin="0,0,0,12">
                            <Button Command="{Binding NavigateToDcisCommand}"
                                    Style="{StaticResource QuickTileButtonStyle}">
                                <Grid Margin="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Width="40" Height="40" CornerRadius="10"
                                            Background="{StaticResource SecondaryLightBrush}">
                                        <materialDesign:PackIcon Kind="Flask" Width="20" Height="20"
                                                                 Foreground="{StaticResource SecondaryBrush}"
                                                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Text="DCI" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="Substances actives" Style="{StaticResource SubtitleStyle}" FontSize="12"/>
                                    </StackPanel>

                                    <materialDesign:PackIcon Grid.Column="2" Kind="ChevronRight"
                                                             Foreground="{StaticResource TextSecondaryBrush}"
                                                             VerticalAlignment="Center"/>
                                </Grid>
                            </Button>
                        </Border>

                        <!-- Laboratoires -->
                        <Border Style="{StaticResource ElevatedCardStyle}" Padding="0" Margin="0,0,12,0">
                            <Button Command="{Binding NavigateToLabosCommand}"
                                    Style="{StaticResource QuickTileButtonStyle}">
                                <Grid Margin="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Width="40" Height="40" CornerRadius="10"
                                            Background="{StaticResource AccentLightBrush}">
                                        <materialDesign:PackIcon Kind="Factory" Width="20" Height="20"
                                                                 Foreground="{StaticResource AccentBrush}"
                                                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Text="Laboratoires" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="Liste &amp; gestion" Style="{StaticResource SubtitleStyle}" FontSize="12"/>
                                    </StackPanel>

                                    <materialDesign:PackIcon Grid.Column="2" Kind="ChevronRight"
                                                             Foreground="{StaticResource TextSecondaryBrush}"
                                                             VerticalAlignment="Center"/>
                                </Grid>
                            </Button>
                        </Border>

                        <!-- Rafraîchir -->
                        <Border Style="{StaticResource ElevatedCardStyle}" Padding="0" Margin="0,0,0,0">
                            <Button Command="{Binding RefreshCommand}"
                                    Style="{StaticResource QuickTileButtonStyle}">
                                <Grid Margin="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Width="40" Height="40" CornerRadius="10"
                                            Background="{StaticResource PrimaryLightBrush}">
                                        <materialDesign:PackIcon Kind="Refresh" Width="20" Height="20"
                                                                 Foreground="{StaticResource PrimaryBrush}"
                                                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Text="Rafraîchir" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="Mettre à jour les compteurs" Style="{StaticResource SubtitleStyle}" FontSize="12"/>
                                    </StackPanel>

                                    <materialDesign:PackIcon Grid.Column="2" Kind="ChevronRight"
                                                             Foreground="{StaticResource TextSecondaryBrush}"
                                                             VerticalAlignment="Center"/>
                                </Grid>
                            </Button>
                        </Border>
                    </UniformGrid>
                </Grid>
            </Border>

            <!-- Indicateur de chargement -->
            <ProgressBar IsIndeterminate="True"
                         Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}"
                         Margin="0,12"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
