<UserControl x:Class="AVCNDB.WPF.Views.FamiliesListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:AVCNDB.WPF.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:FamiliesListViewModel}"
             Background="{DynamicResource MaterialDesignBackground}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Barre d'outils -->
        <Border Grid.Row="0" 
                Background="{DynamicResource MaterialDesignPaper}"
                Padding="16,10"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Recherche -->
                <TextBox Grid.Column="0"
                         Width="280"
                         HorizontalAlignment="Left"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Rechercher une famille..."
                         Style="{StaticResource MaterialDesignOutlinedTextBox}">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>

                <!-- Actions -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Command="{Binding AddNewCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="{StaticResource SuccessBrush}"
                            Foreground="White"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Plus" Width="18" Height="18" VerticalAlignment="Center"/>
                            <TextBlock Text="Nouvelle famille" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding ImportFromExcelCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="0,0,8,0"
                            ToolTip="Importer depuis Excel (template strict)">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="MicrosoftExcel" Width="18" Height="18" VerticalAlignment="Center"/>
                            <TextBlock Text="Import" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding DownloadExcelTemplateCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="0,0,8,0"
                            ToolTip="Télécharger le modèle Excel (template strict)">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FileExcel" Width="18" Height="18" VerticalAlignment="Center"/>
                            <TextBlock Text="Modèle" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding ExportCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            ToolTip="Exporter en Excel">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Download" Width="18" Height="18" VerticalAlignment="Center"/>
                            <TextBlock Text="Export" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Liste des familles -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Families}"
                  SelectedItem="{Binding SelectedFamily}"
                  Style="{StaticResource ModernDataGridStyle}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  Margin="24,16">
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" 
                                    Binding="{Binding recordid}" 
                                    Width="80"
                                    IsReadOnly="True"/>
                
                <DataGridTextColumn Header="Nom de la famille" 
                                    Binding="{Binding itemname}" 
                                    Width="*"/>

                <DataGridTextColumn Header="Catégorie" 
                                    Binding="{Binding subvalue}" 
                                    Width="220"/>

                <DataGridTemplateColumn Header="Actions" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource MaterialDesignIconButton}"
                                        Foreground="{StaticResource PrimaryBrush}"
                                        ToolTip="Modifier"
                                        Width="32" Height="32">
                                    <materialDesign:PackIcon Kind="Pencil" Width="18" Height="18"/>
                                </Button>
                                
                                <Button Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource MaterialDesignIconButton}"
                                        Foreground="{StaticResource ErrorBrush}"
                                        ToolTip="Supprimer"
                                        Width="32" Height="32">
                                    <materialDesign:PackIcon Kind="Delete" Width="18" Height="18"/>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Indicateur de chargement -->
        <ProgressBar Grid.Row="1"
                     IsIndeterminate="True"
                     Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"
                     VerticalAlignment="Top"
                     Margin="24,0"/>

        <!-- Édition / Ajout -->
        <Border Grid.RowSpan="2"
                Background="#80000000"
                Visibility="{Binding IsEditing, Converter={StaticResource BoolToVis}}">
            <Border Background="{DynamicResource MaterialDesignPaper}"
                    CornerRadius="8"
                    Padding="24"
                    MaxWidth="700"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Édition Famille"
                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                               Margin="0,0,0,16"/>

                    <TextBox Text="{Binding EditItemName, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Nom *"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,12" />

                    <TextBox Text="{Binding EditSubValue, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Catégorie"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16" />

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Command="{Binding CancelEditCommand}"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Margin="0,0,12,0">
                            Annuler
                        </Button>
                        <Button Command="{Binding SaveCommand}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="{StaticResource SuccessBrush}"
                                Foreground="White">
                            Enregistrer
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</UserControl>
