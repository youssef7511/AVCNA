<UserControl x:Class="AVCNDB.WPF.Views.VoiesListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:AVCNDB.WPF.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:VoiesListViewModel}"
             Background="{DynamicResource MaterialDesignBackground}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="{DynamicResource MaterialDesignPaper}"
                Padding="16,10"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0"
                         Width="280"
                         HorizontalAlignment="Left"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Rechercher une voie..."
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Command="{Binding AddNewCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="{StaticResource SuccessBrush}"
                            Foreground="White">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Plus" Width="18" Height="18" VerticalAlignment="Center"/>
                            <TextBlock Text="Nouvelle voie" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Voies}"
                  SelectedItem="{Binding SelectedVoie}"
                  Style="{StaticResource ModernDataGridStyle}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  Margin="24,16">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding recordid}" Width="80" IsReadOnly="True"/>
                <DataGridTextColumn Header="Nom" Binding="{Binding itemname}" Width="*"/>
                <DataGridTextColumn Header="Abreviation" Binding="{Binding abname}" Width="180"/>
                <DataGridTextColumn Header="Categorie" Binding="{Binding subvalue}" Width="220"/>
                <DataGridTemplateColumn Header="Actions" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource MaterialDesignIconButton}"
                                        Foreground="{StaticResource PrimaryBrush}"
                                        ToolTip="Modifier"
                                        Width="32" Height="32">
                                    <materialDesign:PackIcon Kind="Pencil" Width="18" Height="18"/>
                                </Button>
                                <Button Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource MaterialDesignIconButton}"
                                        Foreground="{StaticResource ErrorBrush}"
                                        ToolTip="Supprimer"
                                        Width="32" Height="32">
                                    <materialDesign:PackIcon Kind="Delete" Width="18" Height="18"/>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <ProgressBar Grid.Row="1"
                     IsIndeterminate="True"
                     Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"
                     VerticalAlignment="Top"
                     Margin="24,0"/>

        <Border Grid.RowSpan="2"
                Background="#80000000"
                Visibility="{Binding IsEditing, Converter={StaticResource BoolToVis}}">
            <Border Background="{DynamicResource MaterialDesignPaper}"
                    CornerRadius="8"
                    Padding="24"
                    MaxWidth="700"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Edition Voie"
                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                               Margin="0,0,0,16"/>

                    <TextBox Text="{Binding EditItemName, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Nom *"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,12"/>

                    <TextBox Text="{Binding EditAbName, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Abreviation"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,12"/>

                    <TextBox Text="{Binding EditSubValue, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Categorie"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Command="{Binding CancelEditCommand}"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Margin="0,0,12,0">Annuler</Button>
                        <Button Command="{Binding SaveCommand}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="{StaticResource SuccessBrush}"
                                Foreground="White">Enregistrer</Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</UserControl>
