<UserControl x:Class="AVCNDB.WPF.Views.MedicDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:AVCNDB.WPF.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:MedicDetailViewModel}"
             Background="{DynamicResource MaterialDesignBackground}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        
        <!-- Style pour les labels d'information -->
        <Style x:Key="InfoLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
        
        <!-- Style pour les valeurs d'information -->
        <Style x:Key="InfoValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ============================================
                 EN-TÃŠTE DE LA FICHE
            ============================================ -->
            <Border Grid.Row="0" 
                    Style="{StaticResource MedicCardStyle}"
                    Margin="0,0,0,24">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Badges et actions -->
                    <Grid Grid.Row="0" Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Badges -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <!-- Badge PÃ©diatrique -->
                            <Border Style="{StaticResource PediatricBadgeStyle}"
                                    Visibility="{Binding Medic.Pediatrique, Converter={StaticResource BoolToVis}}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ‘¶" Margin="0,0,4,0"/>
                                    <TextBlock Text="PÃ‰DIATRIQUE"/>
                                </StackPanel>
                            </Border>

                            <!-- Badge GÃ©nÃ©rique -->
                            <Border Style="{StaticResource GenericBadgeStyle}"
                                    Visibility="{Binding Medic.Generique, Converter={StaticResource BoolToVis}}">
                                <TextBlock Text="GÃ‰NÃ‰RIQUE"/>
                            </Border>

                            <!-- Badge ContrÃ´lÃ© -->
                            <Border Style="{StaticResource ControlledBadgeStyle}"
                                    Visibility="{Binding Medic.Tableau, Converter={StaticResource BoolToVis}}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="âš ï¸" Margin="0,0,4,0"/>
                                    <TextBlock Text="{Binding Medic.Tableau, StringFormat='TABLEAU {0}'}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Actions -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Command="{Binding EditCommand}"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Margin="0,0,8,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Pencil" Width="18" Height="18" VerticalAlignment="Center"/>
                                    <TextBlock Text="Modifier" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button Command="{Binding ExportPdfCommand}"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Margin="0,0,8,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="FilePdfBox" Width="18" Height="18" VerticalAlignment="Center"/>
                                    <TextBlock Text="PDF" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button Command="{Binding PrintCommand}"
                                    Style="{StaticResource MaterialDesignIconButton}"
                                    ToolTip="Imprimer">
                                <materialDesign:PackIcon Kind="Printer" Width="20" Height="20"/>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!-- Nom du mÃ©dicament -->
                    <StackPanel Grid.Row="1">
                        <TextBlock Text="{Binding Medic.Itemname}" 
                                   FontSize="28" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryDarkBrush}"
                                   TextWrapping="Wrap"/>
                        
                        <!-- DCI principal -->
                        <TextBlock Text="{Binding Medic.Dci1Navigation.Dciname}" 
                                   Style="{StaticResource DciLabelStyle}"
                                   FontSize="16"
                                   Margin="0,8,0,0"/>
                    </StackPanel>

                    <!-- Informations principales -->
                    <Grid Grid.Row="2" Margin="0,24,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Dosage -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="DOSAGE" Style="{StaticResource InfoLabelStyle}"/>
                            <TextBlock Text="{Binding Medic.Dosage1, TargetNullValue='-'}" 
                                       Style="{StaticResource InfoValueStyle}"/>
                        </StackPanel>

                        <!-- Forme -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="FORME" Style="{StaticResource InfoLabelStyle}"/>
                            <TextBlock Text="{Binding Medic.FormeNavigation.Formename, TargetNullValue='-'}" 
                                       Style="{StaticResource InfoValueStyle}"/>
                        </StackPanel>

                        <!-- PrÃ©sentation -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="PRÃ‰SENTATION" Style="{StaticResource InfoLabelStyle}"/>
                            <TextBlock Text="{Binding Medic.PresentNavigation.Presentname, TargetNullValue='-'}" 
                                       Style="{StaticResource InfoValueStyle}"/>
                        </StackPanel>

                        <!-- Laboratoire -->
                        <StackPanel Grid.Column="3">
                            <TextBlock Text="LABORATOIRE" Style="{StaticResource InfoLabelStyle}"/>
                            <TextBlock Text="{Binding Medic.LaboNavigation.Laboname, TargetNullValue='-'}" 
                                       Style="{StaticResource InfoValueStyle}"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- ============================================
                 CONTENU DÃ‰TAILLÃ‰
            ============================================ -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Colonne gauche -->
                <StackPanel Grid.Column="0" Margin="0,0,12,0">
                    
                    <!-- Section Prix -->
                    <Border Style="{StaticResource ElevatedCardStyle}" Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="ðŸ’° Tarification" 
                                       Style="{StaticResource TitleH3Style}"
                                       Margin="0,0,0,16"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Prix Fabricant HT -->
                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,12">
                                    <TextBlock Text="Prix Fabricant HT" Style="{StaticResource InfoLabelStyle}"/>
                                    <TextBlock Text="{Binding Medic.Pfht, StringFormat={}{0:N2} DH, TargetNullValue='-'}" 
                                               Style="{StaticResource InfoValueStyle}"/>
                                </StackPanel>

                                <!-- Prix Hospitalier -->
                                <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,12">
                                    <TextBlock Text="Prix Hospitalier" Style="{StaticResource InfoLabelStyle}"/>
                                    <TextBlock Text="{Binding Medic.Ph, StringFormat={}{0:N2} DH, TargetNullValue='-'}" 
                                               Style="{StaticResource InfoValueStyle}"/>
                                </StackPanel>

                                <!-- Prix de Gros -->
                                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,12">
                                    <TextBlock Text="Prix de Gros" Style="{StaticResource InfoLabelStyle}"/>
                                    <TextBlock Text="{Binding Medic.Pgross, StringFormat={}{0:N2} DH, TargetNullValue='-'}" 
                                               Style="{StaticResource InfoValueStyle}"/>
                                </StackPanel>

                                <!-- PBR -->
                                <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,12">
                                    <TextBlock Text="Prix Base Remboursement" Style="{StaticResource InfoLabelStyle}"/>
                                    <TextBlock Text="{Binding Medic.Pbr, StringFormat={}{0:N2} DH, TargetNullValue='-'}" 
                                               Style="{StaticResource InfoValueStyle}"/>
                                </StackPanel>

                                <!-- PPV (mis en Ã©vidence) -->
                                <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                        Background="{StaticResource SuccessLightBrush}"
                                        CornerRadius="8"
                                        Padding="16,12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" 
                                                   Text="Prix Public de Vente (PPV)"
                                                   VerticalAlignment="Center"
                                                   FontWeight="SemiBold"/>
                                        
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding Medic.Ppv, StringFormat={}{0:N2} DH}"
                                                   FontSize="24"
                                                   FontWeight="Bold"
                                                   Foreground="{StaticResource SuccessDarkBrush}"/>
                                    </Grid>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Section Composition (DCI) -->
                    <Border Style="{StaticResource ElevatedCardStyle}" Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="ðŸ§ª Composition" 
                                       Style="{StaticResource TitleH3Style}"
                                       Margin="0,0,0,16"/>

                            <!-- DCI 1 -->
                            <Border BorderBrush="{StaticResource BorderLightBrush}"
                                    BorderThickness="0,0,0,1"
                                    Padding="0,8"
                                    Visibility="{Binding Medic.Dci1Navigation, Converter={StaticResource BoolToVis}}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="DCI Principal" Style="{StaticResource InfoLabelStyle}"/>
                                        <TextBlock Text="{Binding Medic.Dci1Navigation.Dciname}" 
                                                   FontWeight="SemiBold"/>
                                    </StackPanel>
                                    
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding Medic.Dosage1}"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <!-- DCI 2 -->
                            <Border BorderBrush="{StaticResource BorderLightBrush}"
                                    BorderThickness="0,0,0,1"
                                    Padding="0,8"
                                    Visibility="{Binding Medic.Dci2Navigation, Converter={StaticResource BoolToVis}}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="DCI Secondaire" Style="{StaticResource InfoLabelStyle}"/>
                                        <TextBlock Text="{Binding Medic.Dci2Navigation.Dciname}" 
                                                   FontWeight="SemiBold"/>
                                    </StackPanel>
                                    
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding Medic.Dosage2}"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <!-- DCI 3 -->
                            <Border BorderBrush="{StaticResource BorderLightBrush}"
                                    BorderThickness="0,0,0,1"
                                    Padding="0,8"
                                    Visibility="{Binding Medic.Dci3Navigation, Converter={StaticResource BoolToVis}}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="DCI 3" Style="{StaticResource InfoLabelStyle}"/>
                                        <TextBlock Text="{Binding Medic.Dci3Navigation.Dciname}" 
                                                   FontWeight="SemiBold"/>
                                    </StackPanel>
                                    
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding Medic.Dosage3}"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <!-- DCI 4 -->
                            <Border Padding="0,8"
                                    Visibility="{Binding Medic.Dci4Navigation, Converter={StaticResource BoolToVis}}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="DCI 4" Style="{StaticResource InfoLabelStyle}"/>
                                        <TextBlock Text="{Binding Medic.Dci4Navigation.Dciname}" 
                                                   FontWeight="SemiBold"/>
                                    </StackPanel>
                                    
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding Medic.Dosage4}"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Colonne droite -->
                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                    
                    <!-- Section Identification -->
                    <Border Style="{StaticResource ElevatedCardStyle}" Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="ðŸ”– Identification" 
                                       Style="{StaticResource TitleH3Style}"
                                       Margin="0,0,0,16"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Code-barre -->
                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,12">
                                    <TextBlock Text="Code-barre" Style="{StaticResource InfoLabelStyle}"/>
                                    <TextBlock Text="{Binding Medic.Barcode, TargetNullValue='-'}" 
                                               Style="{StaticResource InfoValueStyle}"
                                               FontFamily="Consolas"/>
                                </StackPanel>

                                <!-- AMM -->
                                <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,12">
                                    <TextBlock Text="NÂ° AMM" Style="{StaticResource InfoLabelStyle}"/>
                                    <TextBlock Text="{Binding Medic.Amm, TargetNullValue='-'}" 
                                               Style="{StaticResource InfoValueStyle}"/>
                                </StackPanel>

                                <!-- Famille -->
                                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,12">
                                    <TextBlock Text="Famille" Style="{StaticResource InfoLabelStyle}"/>
                                    <TextBlock Text="{Binding Medic.FamilyNavigation.Familyname, TargetNullValue='-'}" 
                                               Style="{StaticResource InfoValueStyle}"/>
                                </StackPanel>

                                <!-- Sous-famille -->
                                <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,12">
                                    <TextBlock Text="Sous-famille" Style="{StaticResource InfoLabelStyle}"/>
                                    <TextBlock Text="{Binding Medic.Sfamily, TargetNullValue='-'}" 
                                               Style="{StaticResource InfoValueStyle}"/>
                                </StackPanel>

                                <!-- Voie d'administration -->
                                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
                                    <TextBlock Text="Voie d'administration" Style="{StaticResource InfoLabelStyle}"/>
                                    <TextBlock Text="{Binding Medic.VoieNavigation.Voiename, TargetNullValue='-'}" 
                                               Style="{StaticResource InfoValueStyle}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Section Remboursement -->
                    <Border Style="{StaticResource ElevatedCardStyle}" Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="ðŸ¥ Remboursement" 
                                       Style="{StaticResource TitleH3Style}"
                                       Margin="0,0,0,16"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Taux de remboursement -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Taux" Style="{StaticResource InfoLabelStyle}"/>
                                    <TextBlock Style="{StaticResource InfoValueStyle}">
                                        <Run Text="{Binding Medic.Taux, StringFormat={}{0}%, TargetNullValue='-'}"/>
                                    </TextBlock>
                                </StackPanel>

                                <!-- Statut remboursement -->
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Remboursable" Style="{StaticResource InfoLabelStyle}"/>
                                    <Border CornerRadius="4" 
                                            Padding="12,6"
                                            HorizontalAlignment="Left">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="{StaticResource ErrorLightBrush}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Medic.Remboursable}" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource SuccessLightBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock FontWeight="SemiBold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="âŒ Non"/>
                                                    <Setter Property="Foreground" Value="{StaticResource ErrorDarkBrush}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Medic.Remboursable}" Value="True">
                                                            <Setter Property="Text" Value="âœ“ Oui"/>
                                                            <Setter Property="Foreground" Value="{StaticResource SuccessDarkBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Section Notes -->
                    <Border Style="{StaticResource ElevatedCardStyle}"
                            Visibility="{Binding HasNotes, Converter={StaticResource BoolToVis}}">
                        <StackPanel>
                            <TextBlock Text="ðŸ“ Notes" 
                                       Style="{StaticResource TitleH3Style}"
                                       Margin="0,0,0,16"/>

                            <TextBlock Text="{Binding Medic.Indication}"
                                       TextWrapping="Wrap"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
