<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- ============================================
         STYLES DES CARTES
         Design moderne avec ombres et coins arrondis
    ============================================ -->
    
    <!-- Carte de base -->
    <Style x:Key="BaseCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect ShadowDepth="2" 
                                  BlurRadius="8" 
                                  Opacity="0.15"
                                  Direction="270"/>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Carte élevée (plus d'ombre) -->
    <Style x:Key="ElevatedCardStyle" TargetType="Border" BasedOn="{StaticResource BaseCardStyle}">
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect ShadowDepth="4" 
                                  BlurRadius="16" 
                                  Opacity="0.2"
                                  Direction="270"/>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Carte avec bordure -->
    <Style x:Key="OutlinedCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="Padding" Value="16"/>
    </Style>
    
    <!-- ============================================
         CARTE MÉDICAMENT - Design spécial
    ============================================ -->
    
    <!-- Conteneur principal de la fiche médicament -->
    <Style x:Key="MedicCardContainerStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Margin" Value="8"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect ShadowDepth="3" 
                                  BlurRadius="12" 
                                  Opacity="0.18"
                                  Direction="270"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect ShadowDepth="5" 
                                          BlurRadius="20" 
                                          Opacity="0.25"
                                          Direction="270"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- En-tête de la fiche médicament -->
    <Style x:Key="MedicCardHeaderStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource PrimaryGradientBrush}"/>
        <Setter Property="CornerRadius" Value="16,16,0,0"/>
        <Setter Property="Padding" Value="20,16"/>
    </Style>
    
    <!-- Section de la fiche médicament -->
    <Style x:Key="MedicCardSectionStyle" TargetType="Border">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderLightBrush}"/>
        <Setter Property="Padding" Value="16,12"/>
    </Style>
    
    <!-- Badge de catégorie (tableau, pédiatrique, etc.) -->
    <Style x:Key="CategoryBadgeStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="Margin" Value="4,0"/>
        <Setter Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
    </Style>
    
    <!-- Badge pédiatrique -->
    <Style x:Key="PediatricBadgeStyle" TargetType="Border" BasedOn="{StaticResource CategoryBadgeStyle}">
        <Setter Property="Background" Value="{StaticResource MedicPediatricBrush}"/>
    </Style>
    
    <!-- Badge générique -->
    <Style x:Key="GenericBadgeStyle" TargetType="Border" BasedOn="{StaticResource CategoryBadgeStyle}">
        <Setter Property="Background" Value="{StaticResource MedicGenericBrush}"/>
    </Style>
    
    <!-- Badge médicament contrôlé -->
    <Style x:Key="ControlledBadgeStyle" TargetType="Border" BasedOn="{StaticResource CategoryBadgeStyle}">
        <Setter Property="Background" Value="{StaticResource MedicControlledBrush}"/>
    </Style>
    
    <!-- ============================================
         PANELS DE GROUPE
    ============================================ -->
    
    <!-- Panel de groupe avec titre -->
    <Style x:Key="GroupPanelStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="Margin" Value="0,8"/>
    </Style>
    
    <!-- ============================================
         LISTE ITEM CARD
    ============================================ -->
    
    <!-- Item de liste (pour DataGrid alternatif) -->
    <Style x:Key="ListItemCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="Margin" Value="0,4"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect ShadowDepth="1" 
                                  BlurRadius="4" 
                                  Opacity="0.1"
                                  Direction="270"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource BorderLightBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- ============================================
         INFO BOX (pour alertes, messages)
    ============================================ -->
    
    <!-- Info box - Information -->
    <Style x:Key="InfoBoxStyle" TargetType="Border">
        <Setter Property="Background" Value="#E3F2FD"/>
        <Setter Property="BorderBrush" Value="{StaticResource InfoBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,0,3"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Margin" Value="0,8"/>
    </Style>
    
    <!-- Info box - Succès -->
    <Style x:Key="SuccessBoxStyle" TargetType="Border">
        <Setter Property="Background" Value="#E8F5E9"/>
        <Setter Property="BorderBrush" Value="{StaticResource SuccessBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,0,3"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Margin" Value="0,8"/>
    </Style>
    
    <!-- Info box - Avertissement -->
    <Style x:Key="WarningBoxStyle" TargetType="Border">
        <Setter Property="Background" Value="#FFF8E1"/>
        <Setter Property="BorderBrush" Value="{StaticResource WarningBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,0,3"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Margin" Value="0,8"/>
    </Style>
    
    <!-- Info box - Erreur -->
    <Style x:Key="ErrorBoxStyle" TargetType="Border">
        <Setter Property="Background" Value="#FFEBEE"/>
        <Setter Property="BorderBrush" Value="{StaticResource ErrorBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,0,3"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Margin" Value="0,8"/>
    </Style>
    
</ResourceDictionary>
