<Window x:Class="AVCNDB.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:AVCNDB.WPF.ViewModels"
        mc:Ignorable="d"
        Title="AVICENNA DB - Base de DonnÃ©es Pharmaceutique"
        Height="800" Width="1400"
        MinHeight="600" MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontFamily="Segoe UI"
        TextElement.FontSize="14"
        d:DataContext="{d:DesignInstance Type=vm:MainViewModel}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ============================================
             MENU LATÃ‰RAL (Navigation)
        ============================================ -->
        <Border x:Name="SidebarBorder"
                Grid.Column="0" 
                Background="{StaticResource PrimaryDarkBrush}"
                MouseEnter="Sidebar_MouseEnter"
                MouseLeave="Sidebar_MouseLeave"
                Width="{Binding IsMenuExpanded, Converter={StaticResource BoolToVisibility}, ConverterParameter=260}">
            <Border.Style>
                <Style TargetType="Border">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsMenuExpanded}" Value="True">
                            <Setter Property="Width" Value="260"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsMenuExpanded}" Value="False">
                            <Setter Property="Width" Value="60"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo et titre -->
                <StackPanel Grid.Row="0" Margin="16,20">
                    <TextBlock Text="ðŸ¥" 
                               FontSize="32" 
                               HorizontalAlignment="Center"
                               Foreground="White"/>
                    <TextBlock Text="AVICENNA DB" 
                               FontSize="18" 
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0"
                               Visibility="{Binding IsMenuExpanded, Converter={StaticResource BoolToVisibility}}"/>
                    <TextBlock Text="Base MÃ©dicamenteuse" 
                               FontSize="11" 
                               Foreground="#90CAF9"
                               HorizontalAlignment="Center"
                               Visibility="{Binding IsMenuExpanded, Converter={StaticResource BoolToVisibility}}"/>
                </StackPanel>

                <!-- Menu de navigation -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Accueil -->
                        <Button Command="{Binding NavigateToHomeCommand}" 
                                Style="{StaticResource MaterialDesignFlatButton}"
                                Foreground="White" 
                                HorizontalContentAlignment="Left"
                                Height="48"
                                Margin="8,2">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Home" 
                                                         Width="24" Height="24" 
                                                         VerticalAlignment="Center"/>
                                <TextBlock Text="Accueil" 
                                           Margin="16,0,0,0" 
                                           VerticalAlignment="Center"
                                           Visibility="{Binding IsMenuExpanded, Converter={StaticResource BoolToVisibility}}"/>
                            </StackPanel>
                        </Button>

                        <!-- BibliothÃ¨que -->
                        <Button Command="{Binding NavigateToLibraryCommand}" 
                                Style="{StaticResource MaterialDesignFlatButton}"
                                Foreground="White" 
                                HorizontalContentAlignment="Left"
                                Height="48"
                                Margin="8,2">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="BookOpenPageVariant" 
                                                         Width="24" Height="24" 
                                                         VerticalAlignment="Center"/>
                                <TextBlock Text="BibliothÃ¨que" 
                                           Margin="16,0,0,0" 
                                           VerticalAlignment="Center"
                                           Visibility="{Binding IsMenuExpanded, Converter={StaticResource BoolToVisibility}}"/>
                            </StackPanel>
                        </Button>

                        <!-- Base de donnÃ©es -->
                        <Button Command="{Binding NavigateToDatabaseCommand}" 
                                Style="{StaticResource MaterialDesignFlatButton}"
                                Foreground="White" 
                                HorizontalContentAlignment="Left"
                                Height="48"
                                Margin="8,2">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Database" 
                                                         Width="24" Height="24" 
                                                         VerticalAlignment="Center"/>
                                <TextBlock Text="Base de donnÃ©es" 
                                           Margin="16,0,0,0" 
                                           VerticalAlignment="Center"
                                           Visibility="{Binding IsMenuExpanded, Converter={StaticResource BoolToVisibility}}"/>
                            </StackPanel>
                        </Button>

                        <!-- Mouvements -->
                        <Button Command="{Binding NavigateToMovementsCommand}" 
                                Style="{StaticResource MaterialDesignFlatButton}"
                                Foreground="White" 
                                HorizontalContentAlignment="Left"
                                Height="48"
                                Margin="8,2">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="SwapHorizontal" 
                                                         Width="24" Height="24" 
                                                         VerticalAlignment="Center"/>
                                <TextBlock Text="Mouvements" 
                                           Margin="16,0,0,0" 
                                           VerticalAlignment="Center"
                                           Visibility="{Binding IsMenuExpanded, Converter={StaticResource BoolToVisibility}}"/>
                            </StackPanel>
                        </Button>

                        <Separator Background="#1565C0" Margin="16,8"/>

                        <!-- ParamÃ¨tres -->
                        <Button Command="{Binding NavigateToSettingsCommand}" 
                                Style="{StaticResource MaterialDesignFlatButton}"
                                Foreground="White" 
                                HorizontalContentAlignment="Left"
                                Height="48"
                                Margin="8,2">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Cog" 
                                                         Width="24" Height="24" 
                                                         VerticalAlignment="Center"/>
                                <TextBlock Text="ParamÃ¨tres" 
                                           Margin="16,0,0,0" 
                                           VerticalAlignment="Center"
                                           Visibility="{Binding IsMenuExpanded, Converter={StaticResource BoolToVisibility}}"/>
                            </StackPanel>
                        </Button>

                        <!-- Outils -->
                        <Button Command="{Binding NavigateToToolsCommand}" 
                                Style="{StaticResource MaterialDesignFlatButton}"
                                Foreground="White" 
                                HorizontalContentAlignment="Left"
                                Height="48"
                                Margin="8,2">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Tools" 
                                                         Width="24" Height="24" 
                                                         VerticalAlignment="Center"/>
                                <TextBlock Text="Outils" 
                                           Margin="16,0,0,0" 
                                           VerticalAlignment="Center"
                                           Visibility="{Binding IsMenuExpanded, Converter={StaticResource BoolToVisibility}}"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

                <!-- Bas du menu -->
                <StackPanel Grid.Row="2" Margin="8,16">
                    <!-- Toggle thÃ¨me -->
                    <Button Command="{Binding ToggleThemeCommand}" 
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White" 
                            HorizontalContentAlignment="Left"
                            Height="48">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="{Binding IsDarkTheme, Converter={StaticResource BoolToVisibility}, ConverterParameter=WeatherSunny}" 
                                                     Width="24" Height="24" 
                                                     VerticalAlignment="Center"/>
                            <TextBlock Text="ThÃ¨me" 
                                       Margin="16,0,0,0" 
                                       VerticalAlignment="Center"
                                       Visibility="{Binding IsMenuExpanded, Converter={StaticResource BoolToVisibility}}"/>
                        </StackPanel>
                    </Button>

                    <!-- Toggle menu -->
                    <Button Command="{Binding ToggleMenuCommand}" 
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White" 
                            HorizontalContentAlignment="Center"
                            Height="40"
                            Margin="0,8,0,0">
                        <materialDesign:PackIcon Kind="{Binding IsMenuExpanded, Converter={StaticResource BoolToVisibility}, ConverterParameter=ChevronLeft}" 
                                                 Width="24" Height="24"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ============================================
             CONTENU PRINCIPAL
        ============================================ -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="{DynamicResource MaterialDesignPaper}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="24,16"
                    Visibility="{Binding IsHeaderVisible, Converter={StaticResource BoolToVisibility}}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Bouton retour -->
                    <Button Grid.Column="0"
                            Command="{Binding GoBackCommand}"
                            Style="{StaticResource MaterialDesignIconButton}"
                            ToolTip="Retour"
                            Margin="0,0,16,0">
                        <materialDesign:PackIcon Kind="ArrowLeft" Width="24" Height="24"/>
                    </Button>

                    <!-- Titre de la page -->
                    <TextBlock Grid.Column="1"
                               Text="{Binding CurrentPageTitle}"
                               Style="{StaticResource TitleH2Style}"
                               VerticalAlignment="Center"
                               Margin="0"/>

                    <!-- Actions rapides -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <TextBox Width="200"
                                 materialDesign:HintAssist.Hint="Rechercher..."
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,0,12,0"/>
                        
                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                ToolTip="Notifications">
                            <materialDesign:PackIcon Kind="Bell" Width="24" Height="24"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Zone de contenu (injection de vues) -->
            <ContentControl Grid.Row="1"
                            Content="{Binding CurrentView}"
                            Margin="0"/>

            <!-- Status Bar -->
            <Border Grid.Row="2"
                    Background="{DynamicResource MaterialDesignPaper}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="16,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="AVICENNA DB - PrÃªt"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal">
                        <TextBlock Text="ðŸ“Š" Margin="0,0,4,0"/>
                        <TextBlock Text="{Binding AlertsCount, StringFormat='{}{0} alertes'}"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
